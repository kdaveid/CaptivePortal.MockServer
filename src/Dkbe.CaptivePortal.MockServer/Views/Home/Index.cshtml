@model IndexViewModel
@{
    ViewData["Title"] = "Mock Server - Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2>Main Page</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-10">
            @await Html.PartialAsync("_ZoneActionsPartial", Model.StaticZones)
            <hr />
            @await Html.PartialAsync("_CurrentSessionsPartial", Model)
        </div>
        <div class="col-md-2" style="background-color: lightgray; padding: 12px 0 24px; text-align:center;">
            <h3>Mock Server</h3>
            @await Html.PartialAsync("_MockserverRequestsPartial")
            <hr />
            @await Html.PartialAsync("_MockserverSettingsPartial")
        </div>
    </div>
</div>

